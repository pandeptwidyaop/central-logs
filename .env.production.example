# Production Environment Variables
# Copy this to .env for production deployment

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=3000
SERVER_ENV=production

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=/data/central-logs.db

# ============================================
# Redis Configuration
# ============================================
# IMPORTANT: Use service name 'redis' as hostname in Docker
REDIS_URL=redis://redis:6379

# ============================================
# JWT Authentication
# ============================================
# CRITICAL: Generate a secure random key!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_KEY_IN_PRODUCTION
JWT_EXPIRY=24h

# ============================================
# Web Push Notifications (VAPID)
# ============================================
# Generate at: https://vapidkeys.com/
VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ============================================
# Initial Admin User
# ============================================
ADMIN_USERNAME=admin
# CRITICAL: Use a strong password!
# Generate with: openssl rand -base64 16
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# Rate Limiting (Production Tuning)
# ============================================
RATE_LIMIT_API_REQUESTS_PER_MINUTE=5000
RATE_LIMIT_TELEGRAM_MESSAGES_PER_MINUTE=30
RATE_LIMIT_DISCORD_MESSAGES_PER_MINUTE=50
RATE_LIMIT_PUSH_MESSAGES_PER_MINUTE=100

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=60s
WEBSOCKET_PONG_TIMEOUT=15s

# ============================================
# Log Retention Policy (Production)
# ============================================
RETENTION_ENABLED=true
RETENTION_DEFAULT_MAX_AGE=90d
RETENTION_DEFAULT_MAX_COUNT=1000000
RETENTION_CLEANUP_ENABLED=true
RETENTION_CLEANUP_SCHEDULE=0 3 * * *
RETENTION_CLEANUP_BATCH_SIZE=5000
